@{
}
@model StudentApp.Models.Entities.Student
<h1 class="text-light">Add Student</h1>
<form  method="post" class="p-3">
<div class="mt-3 text-light">
    <label class="form-label">Name</label>
     <input type="text" class="form-control text-dark" asp-for="Name"/>
</div>

    <div class="mt-3 text-light">
    <label class="form-label">Email</label>
        <input type="text" class="form-control text-dark" asp-for="Email" />
</div>
    <div class="mt-3 text-light">
    <label class="form-label">Phone</label>
        <input type="text" class="form-control text-dark" asp-for="Phone" />
</div>

    <div class="mt-3 text-light">
    <input type="checkbox" class="form-check-input" id="PaymentStatus" asp-for="paymentStatus" />
    <label class="form-check-label" for="PaymentStatus">Paid</label>    
</div>

    <div class="mt-3 text-light">
    <button type="submit" class="btn btn-primary">Save</button>
</div>
</form>